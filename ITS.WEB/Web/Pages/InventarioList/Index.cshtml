@page
@model Web.Pages.Inventario.IndexModel
@using Abstracciones.Modelos.Inventarios

@{
    ViewData["Title"] = "Inventario";
}

<h1 class="equipment-title">EQUIPMENT</h1>

<table class="table equipment-table">
    <thead>
        <tr>
            <th>PRODUCT CODE</th>
            <th>EQUIPMENT DESCRIPTION</th>
            <th>BRAND</th>
            <th>IN</th>
            <th>OUT</th>
            <th>AVAILABLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inventarios)
        {
            <tr>
                <td>@item.ProductCode</td>
                <td>@item.EquipmentDescription</td>
                <td>@item.Brand</td>
                <td>@item.InStock</td>
                <td>@item.OutStock</td>
                <td>@item.Available</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .equipment-title {
        text-align: center;
        background-color: #fdd835;
        padding: 10px;
        font-weight: bold;
        font-size: 2rem;
        border: 2px solid #000;
    }

    .equipment-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .equipment-table th {
        background-color: #ffe082;
        font-weight: bold;
        border: 1px solid #000;
        padding: 8px;
        text-align: center;
    }

    .equipment-table td {
        border: 1px solid #000;
        padding: 8px;
        text-align: center;
    }

    .equipment-table tr:nth-child(even) {
        background-color: #fff9c4;
    }
</style>
